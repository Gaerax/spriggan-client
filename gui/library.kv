#:import util util

<LibraryView>:
	canvas.before:
		Color:
			rgba: util.COLOR_BG_MAIN
		Rectangle:
			pos: self.pos
			size: self.size
	do_scroll_x: False
	do_scroll_y: True

<LibraryList>:
	cols: 1
	size_hint: 1, None
	padding: 10
	spacing: 10

<LibraryGame>:
	height: 40
	BoxLayout:
		AsyncImage:
			size_hint: .2, 1
			id: icon
		BoxLayout:
			size_hint: .6, 1
			orientation: 'vertical'
			canvas.before:
				Color:
					rgba: util.COLOR_BG_DARK
				Rectangle:
					pos: self.pos
					size: self.size
			BoxLayout:
				size_hint: 1, .9
				Label:
					size_hint: .7, 1
					id: title
					text: 'Game 1'
				Image:
					size_hint: .2, .7
					source: 'img/SeedIcon.png'
			ProgressBar:
				id: progress
				max: 1
				size_hint: 1, .1

		Button:
			background_color: util.COLOR_THEME_DARK
			color: util.COLOR_THEME_LIGHT
			size_hint: .2, 1
			id: activateButton
			on_press: root.activate()
