#:import util util

<PublishPage>:
	canvas.before:
		Color:
			rgba: util.COLOR_BG_DARK
		Rectangle:
			pos: self.pos
			size: self.size
	BoxLayout:
		size_hint: 1, .1
		pos_hint: {'x': 0, 'top': 1}
		Button:
			background_color: util.COLOR_THEME_DARK
			color: util.COLOR_THEME_LIGHT
			size_hint: .25, 1
			text: 'Create New Game'
			on_release: root.create_game()
		Button:
			background_color: util.COLOR_THEME_DARK
			color: util.COLOR_THEME_LIGHT
			size_hint: .25, 1
			text: 'Create New Datastore'
			on_release: root.create_datastore()
		BoxLayout:
			size_hint: .5, 1
			pos_hint: {'x': 0, 'top': 1}
			orientation: 'vertical'
			Label:
				color: util.COLOR_THEME_LIGHT
				text: 'Datastore ID'
				size_hint: 1, .5
			Label:
				color: util.COLOR_THEME_LIGHT
				text: '*********Datastore ID *********'
				id: datastoreidlabel
				size_hint: 1, .5

	FloatLayout:
		id: search
		size_hint: 1, .05
		pos_hint: {'x': 0, 'top': 1}
		Button:
			background_color: util.COLOR_THEME_DARK
			color: util.COLOR_THEME_LIGHT
			id: filter
			size_hint: .05, None
			height: 30
			pos_hint: {'right': 1, 'top': .9}
			on_release: root.reset()
			Image:
				id: resetbtnimg
				center_x: self.parent.center_x
				center_y: self.parent.center_y
				height: 32
				width: 32
				size_hint: None, None

	ContentScrollView:
		id: contentview
		size_hint: 1, .9
		pos_hint: {'x': 0, 'y': 0}


<ContentScrollView>:
	do_scroll_x: False
	do_scroll_y: True


<ContentList>:
	cols: 3
	size_hint: 1, None
	padding: 20
	spacing: 30


