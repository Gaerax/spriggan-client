#:import util util

<Wallet>:

	Button:
		background_color: util.COLOR_THEME_DARK
		color: util.COLOR_THEME_LIGHT
		id: walletbutton
		text: 'Wallet'
		on_press: root.show_wallet()


<WalletDropDown>:
	canvas.before:
		Color:
			rgba: util.COLOR_BG_LIGHT
		Rectangle:
			pos: self.pos
			size: self.size
	auto_dismiss: True
	AddressBox:
		id:address
		size_hint_y: None
		height: 30

	ScrollView:
		id: scroll
		do_scroll_y: True
		size_hint_y: None
		height: 600


<BalanceBox>:
	Label:
		id:name
		text: ''
		halign: 'right'
		size_hint: .4, 1
		pos_hint:{'x': 0, 'y': 0}
	Label:
		id: balance
		text: ''
		halign: 'right'
		size_hint: .6, 1
		pos_hint:{'x': .4, 'y': 0}


<AddressBox>
	Label:
		id:owner
		text: ''
		size_hint: .3, 1
		pos_hint:{'x': 0, 'y': 0}
	TextInput:
		id:address
		size_hint: .5, 1
		pos_hint:{'x': .3, 'y': 0}
		text: 'xch000...000'
		disabled: True
		allow_copy: True
	Button:
		size_hint: .2, 1
		pos_hint:{'x': .8, 'y': 0}
		text: 'copy'
		on_press: root.copy()
